@page "{name}"
@model ShopUI.Pages.ProductModel
@{
}
<div>
    <p>@Model.Product.Name</p>
    <p>@Model.Product.Description</p>
    <p>@Model.Product.Price</p>
    <div>
        <form method="post">
            <label>Stock</label>
            <select asp-for="CartViewModel.StockId">
                @foreach (var stock in Model.Product.Stock)
                {
                    <option value="@stock.Id">@stock.Descripion</option>

                }
            </select>
            <input asp-for="CartViewModel.Num" />
            <button type="submit">Submit</button>
        </form>
    </div>
</div>
@await Component.InvokeAsync("Cart");
